{
  "name": "retailpro-electron",
  "version": "1.0.0",
  "private": true,
  "description": "RetailPro POS demo in Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "dev": "npm run compile && electron .",
    "lint": "echo \"(optional) add eslint\"",
    "test": "echo \"(optional) add tests\"",
    "build": "electron-builder -mwl",
    "compile": "tsc"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.0",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4"
  },
  "build": {
    "appId": "com.retailpro.app",
    "productName": "RetailPro",
    "files": [
      "src/**/*",
      "!**/*.map",
      "!node_modules/.cache/**"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}